{
  "name": "@theWallProject/telegram-bot",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "tsx scripts/copy-db.ts",
    "build": "tsc --build",
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "bot:build": "docker-compose build",
    "bot:run": "docker-compose up -d",
    "bot:down": "docker-compose down",
    "bot:stop": "docker-compose stop",
    "bot:logs": "docker logs -f telegram-bot-prod",
    "bot:clean": "docker-compose down && docker image prune -f"
  },
  "dependencies": {
    "@theWallProject/common": "workspace:*",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "linkify-it": "^5.0.0",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/linkify-it": "^5.0.0",
    "@types/node": "^24.8.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.37.0",
    "prettier": "^3.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  }
}
